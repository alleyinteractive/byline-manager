{
  "dependencies": {
    "@alleyinteractive/block-editor-tools": "^0.3.5",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@alleyinteractive/create-block": "^0.0.3",
    "@alleyinteractive/create-entry": "^0.0.2",
    "@alleyinteractive/eslint-config": "^0.1.2",
    "@alleyinteractive/stylelint-config": "^0.0.2",
    "@types/jest": "^29.5.4",
    "@wordpress/scripts": "^26.12.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "jest": "^29.6.4",
    "mini-css-extract-plugin": "^2.7.6",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "description": "Manage an article's byline and author profiles",
  "engines": {
    "node": "18",
    "npm": "9"
  },
  "license": "GPL-2.0-or-later",
  "name": "byline-manager",
  "scripts": {
    "build": "wp-scripts build --webpack-copy-php --webpack-src-dir=blocks",
    "create-block": "create-block -n byline-manager -l typescript",
    "create-entry": "create-entry -n byline-manager -t byline-manager",
    "create-slotfill": "create-entry -s -n byline-manager -t byline-manager",
    "check-types": "tsc --noEmit",
    "eslint": "eslint --ext .ts --ext .tsx .",
    "eslint:fix": "eslint --ext .ts --ext .tsx . --fix",
    "lint": "npm run check-types && npm run eslint && npm run stylelint",
    "prebuild": "check-node-version --package",
    "precreate-block": "check-node-version --package",
    "precreate-entry": "check-node-version --package",
    "precreate-slotfill": "check-node-version --package",
    "precheck-types": "check-node-version --package",
    "preeslint": "check-node-version --package",
    "preeslint:fix": "check-node-version --package",
    "prelint": "check-node-version --package",
    "prestart": "check-node-version --package",
    "prestart:hot": "check-node-version --package",
    "prestylelint": "check-node-version --package",
    "prestylelint:fix": "check-node-version --package",
    "pretest": "check-node-version --package",
    "pretest:watch": "check-node-version --package",
    "preupdate-wp-dependencies": "check-node-version --package",
    "start": "wp-scripts start --webpack-copy-php --webpack-src-dir=blocks",
    "start:hot": "wp-scripts start --webpack-copy-php --webpack-src-dir=blocks --hot",
    "stylelint": "stylelint \"**/*.scss\" --allow-empty-input",
    "stylelint:fix": "stylelint --fix \"**/*.scss\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "update-wp-dependencies": "wp-scripts packages-update --dist-tag=wp-6.3"
  },
  "version": "0.3.0"
}
